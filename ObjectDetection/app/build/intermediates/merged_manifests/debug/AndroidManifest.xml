<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.pytorch.demo.objectdetection"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="28"
        android:targetSdkVersion="33" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:icon="@drawable/logo_drberry"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_drberry"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.pytorch.demo.objectdetection.searchImages"
            android:exported="false" />
        <activity
            android:name="org.pytorch.demo.objectdetection.ResultDownload"
            android:exported="false" />
        <activity
            android:name="org.pytorch.demo.objectdetection.MainActivity"
            android:exported="false" />
        <activity
            android:name="org.pytorch.demo.objectdetection.splash_screen"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.pytorch.demo.objectdetection.ObjectDetectionActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <provider
            android:name="androidx.camera.camera2.impl.Camera2Initializer"
            android:authorities="org.pytorch.demo.objectdetection.camerax-init"
            android:exported="false"
            android:initOrder="100"
            android:multiprocess="true" />
    </application>

</manifest>